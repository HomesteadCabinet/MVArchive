<Window x:Class="MVArchive.ArchiveProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archive Progress" Height="600" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Archive Progress"
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Overall Progress -->
        <GroupBox Grid.Row="1" Header="Overall Progress" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtOverallStatus" Text="Ready to start archive..." FontWeight="Bold"/>
                <ProgressBar x:Name="pbOverall" Height="20" Margin="0,10,0,0"/>
                <TextBlock x:Name="txtOverallProgress" Text="0 of 0 projects completed" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Current Table Progress -->
        <GroupBox Grid.Row="2" Header="Current Table Progress" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtCurrentTable" Text="No table selected" FontWeight="Bold"/>
                <ProgressBar x:Name="pbCurrentTable" Height="20" Margin="0,10,0,0"/>
                <TextBlock x:Name="txtCurrentTableProgress" Text="0 of 0 records processed" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Current Project -->
        <GroupBox Grid.Row="3" Header="Current Project" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtCurrentProject" Text="No project selected" FontWeight="Bold"/>
                <TextBlock x:Name="txtProjectProgress" Text="0 of 0 tables processed" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Status Details -->
        <GroupBox Grid.Row="4" Header="Status Details" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtStatus" Text="Ready" FontWeight="Bold"/>
                <TextBlock x:Name="txtElapsedTime" Text="Elapsed: 00:00:00" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Log -->
        <GroupBox Grid.Row="5" Header="Archive Log" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                <TextBlock x:Name="txtLog" Text="Archive log will appear here..."
                           TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel Archive" Width="120" Height="30"
                    Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button x:Name="btnClose" Content="Close" Width="80" Height="30"
                    IsEnabled="False" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
